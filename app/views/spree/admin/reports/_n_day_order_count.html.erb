<% content_for :page_title do %>
  <%= Spree.t(:order_counts_for_last_n_days, counts: counts.size) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= link_to_with_icon 'arrow-left', Spree.t(:back_to_reports_list), spree.admin_reports_url, class: 'button' %>
  </li>
<% end %>

<div id="days_order_count">
  <table class="admin-report" data-hook="days_order_count">
    <thead>
      <tr>
        <th class="sort" data-sort="number">
          <%= Spree.t(:date) %>
        </th>
        <th class="sort" data-sort="quantity">
          <%= Spree.t(:quantity) %>
        </th>
      </tr>
    </thead>
    <tbody class="list">
      <% counts.each do |count| %>
        <tr class="align-center">
          <td class="date">
            <span class="number" style="display:none;">
              <%= count[:number] %>
            </span>
            <%= I18n.l(count[:date], format: :long) %>
          </td>
          <td class="quantity">
            <%= count[:count] %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
